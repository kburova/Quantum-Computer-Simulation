<AnchorPane prefHeight="227.0" prefWidth="170.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="qcs.controller.TernaryGateController">
    <children>
        <GridPane prefHeight="171.0" prefWidth="125.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.0" minWidth="104.0" prefWidth="104.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="44.0" minWidth="41.0" prefWidth="44.0" />
